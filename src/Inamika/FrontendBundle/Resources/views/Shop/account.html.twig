{% extends "InamikaFrontendBundle::layoutShop.html.twig" %}
{% block body %}
	{{ parent()}}
	<main id="main" class="offset-header background-gray">
		{% block headerPage %}
			{% include 'InamikaFrontendBundle:_partials:headerPage.html.twig' %}
		{% endblock headerPage %}
		<section>
            <div class="container wow fadeIn">
                <div class="row">
                    <div class="col-lg-3">
                        {% include 'InamikaFrontendBundle:_partials:accountMenu.html.twig' %}
                    </div>
                    <div class="col-lg-9">
						{{ form_start(form, {'attr': {'class': 'form-material sendToApi','novalidate':'novalidate'} }) }}
                        <div class="card">
							<div class="card-header">
								Mis datos
							</div>
							<div class="card-body">
								<div class="row">
									<div class="form-group col-md-6">
										{{form_label(form.name)}}
										{{form_widget(form.name)}}
									</div>
									<div class="form-group col-md-6">
										{{form_label(form.email)}}
										{{form_widget(form.email)}}
									</div>
									<div class="form-group col-md-6">
										{{form_label(form.document)}}
										{{form_widget(form.document)}}
									</div>
									<div class="form-group col-md-6">
										{{form_label(form.phone)}}
										{{form_widget(form.phone)}}
									</div>
									<div class="form-group col-md-6">
										{{form_label(form.address)}}
										{{form_widget(form.address)}}
									</div>
									<div class="form-group col-md-6">
										{{form_label(form.city)}}
										{{form_widget(form.city)}}
									</div>
									<div class="form-group col-md-6">
										{{form_label(form.provence)}}
										{{form_widget(form.provence)}}
									</div>
								</div>
								<hr>
								<div class="text-right">
									<button class="btn btn-primary">Guardar</button>
								</div>
								<div class="d-none">
								{{form_widget(form.customerCategory)}}
								{{form_widget(form.isSeller)}}
								{{form_widget(form.observations)}}
								</div>
							</div>
						</div>
						{{ form_end(form) }}
                    </div>
                </div>
            </div>
		</sction>
	</main>
{% endblock body %}
{% block javascripts %}
	{{ parent()}}
	<script>
		function beforeSuccess(data){
			loading.hide();
			$.toast({
				heading: 'Datos actualizados',
				text: 'Los datos fueron actualizados correctamente',
				position: 'top-right',
				icon: 'success',
				hideAfter: 5000, 
				stack: 6
			});
		}
	</script>
{% endblock javascripts %}
