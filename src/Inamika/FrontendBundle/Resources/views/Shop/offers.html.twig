{% if data.code == 200 %}
        <div class="row">
            <div class="col-sm-9">
                <h3>Ofertas</h3>
            </div>
            <div class="col-sm-3">
                <!-- Controls -->
                <div class="controls pull-right hidden-xs">
                    <a class="left fa fa-chevron-left btn btn-success" href="#sliderOfertas"
                        data-slide="prev"></a>
                    <a class="right fa fa-chevron-right btn btn-success" href="#sliderOfertas"
                            data-slide="next"></a>
                </div>
            </div>
        </div>
        <div id="sliderOfertas" class="carousel slide salients " data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                    {% set index = 0 %}
                    {% for offer in data.result.data %}
                        {% set index = index + 1 %}
                        <div class="col-md-4">
                            {% include 'InamikaFrontendBundle:_partials:cardOffer.html.twig' with { offer:offer } %}
                        </div>
                        {% if index > 2 and data.result.data | length  != index %}
                        {% set index = 0 %}
                        </div></div><div class="carousel-item"><div class="row">
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
{% endif %}