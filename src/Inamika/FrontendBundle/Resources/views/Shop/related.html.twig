{% if data.code == 200 and data.result | length > 0 %}
    <br/>
    <hr>
    <div class="row">
        <div class="col-md-9">
            <h3>Productos relacionados</h3>
        </div>
        <div
            class="col-md-3">
            <!-- Controls -->
            <div class="controls pull-right hidden-xs">
                <a class="left fa fa-chevron-left btn btn-success" href="#realted" data-slide="prev"></a>
                <a class="right fa fa-chevron-right btn btn-success" href="#realted" data-slide="next"></a>
            </div>
        </div>
    </div>
    <div id="realted" class="carousel slide salients " data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    {% set index = 0 %}
                    {% for product in data.result %}
                        {% set index = index + 1 %}
                        <div class="col-sm-3">
                            {% include 'InamikaFrontendBundle:_partials:cardProduct.html.twig' with { product:product } %}
                        </div>
                        {% if index > 3 %}
                            {% set index = 0 %}
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row">
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
