{% set pages = (total / limit) %}
{% if (total % limit) > 0 %}
	{% set pages = (pages + 1) | number_format %}
{% else %}
	{% set pages = pages | number_format %}
{% endif %}
{% if pages > 1 %}
	<nav aria-label="Page navigation example">
		<div class="overflow-auto">
			<ul class="pagination pagination-sm">
				<li class="page-item {% if app.request.get('page') == 1 %}disabled{% endif %}">
					<a class="page-link" href="javascript:goToPage({{ (app.request.get('page') - 1) }});" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
						<span class="sr-only">Previous</span>
					</a>
				</li>
				{% for page in 1..pages %}
					<li class="page-item {% if app.request.get('page') == page %}active{% endif %}">
						<a class="page-link" href="javascript:goToPage({{ page }});">{{ page }}</a>
					</li>
				{% endfor %}
				<li class="page-item {% if app.request.get('page') == pages %}disabled{% endif %}">
					<a class="page-link" href="javascript:goToPage({{ (app.request.get('page') + 1) }});" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
						<span class="sr-only">Next</span>
					</a>
				</li>
			</ul>
		</div>
	</nav>
{% endif %}
