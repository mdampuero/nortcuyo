<div class="col-item">
    <div class="photo" style="height: 250px;" onclick="quickViewProduct('{{ product.code }}')">
        {% if product.picture %}
        <img src="{{ asset('uploads/sm/') }}{{ product.picture }}" class="img-responsive center"  />
        {% else %}
        <img src="{{ asset("bundles/inamikabackoffice/assets/images/image_not_found.jpg") }}" class="img-responsive center"  />
        {% endif %}
    </div>
    <div class="info">
        <div class="price" onclick="quickViewProduct('{{ product.code }}')">
            <h6 style="height: 40px;">{{ product.name | capitalize }}</h6>
            <div class="row">
                <div class="col-sm-7">
                    <h5 class="price-text-color" style="margin-bottom: 10px;"> {{ product.currency.symbol }} {{ (product.price * app.session.get('_security_main').category.discount ) | number_format(2, ',', '.') }}</h5>
                </div>
                <div class="col-sm-5 text-right">
                    <small class="text-muted" >{{ product.code }}</small>
                </div>
            </div>
        </div>
        <div class="separator clear-left">
            <p class="btn-add">
                <a href="javascript:quickViewProduct('{{ product.code }}')" class="hidden-sm"><i class="fa fa-shopping-cart text-secondary"></i> AÃ±adir</a>
            </p>
            <p class="btn-details">
                <a href="{{ path('inamika_frontend_shop_product_view',{'code':product.code}) }}" class="hidden-sm"><i class="fa fa-eye text-secondary"></i> Ver</a>
            </p>
        </div>
        <div class="clearfix"></div>
    </div>
</div>