{% if data.code == 200 %}
	{% for key,brand in data.result.data %}
		{% set delay = key * 0.1 %}
		<div class="col-lg-2 col-md-3 col-6 portfolio-item wow fadeInUp" data-wow-delay="{{ delay }}s">
			
                {% if brand.picture %}
				    <img src="{{ asset('uploads') }}/or/{{ brand.picture }}" alt="">
                {% endif %}
				<a href="{{ brand.link | default('#hero') }}" >
				<div class="details">
					<h4>{{ brand.name }}</h4>
				</div>
			</a>
		</div>
	{% endfor %}
{% endif %}
