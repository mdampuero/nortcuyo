{% block javascripts %} 
{{ parent() }}
{% include 'InamikaBackOfficeBundle:_partials:dataTableScripts.html.twig' with { pathBase:pathBase,loadData:pathBaseApi } %}
<script type="text/javascript">
    $(function () {
        $('#{{ pathBase }}_dataTable').DataTable({
            order: [[ 1, 'asc' ]],
            "processing": false,
            "serverSide": true,
            columns: [
                { title:"TÃ­tulo",data: "title" },
                { title:"Cant. productos",data: "countCreated" },
                {
                    data: null,
                    orderable: false,
                    className: "text-center",
                    defaultContent: `
                    <button type="button" class="btn-download btn btn-outline-warning btn-circle"><i class="fa fa-download"></i></button>
                    <button type="button" class="btn-detail btn btn-outline-success btn-circle"><i class="fa fa-eye"></i></button>
                    <button type="button" class="btn-remove btn btn-outline-danger btn-circle"><i class="fa fa-trash"></i></button>
                    `
                }
            ]
        });
        $('#{{ pathBase }}_dataTable').on('click', 'button.btn-detail', function () {
            var data = $('#{{ pathBase }}_dataTable').DataTable().row( $(this).parents('tr') ).data();
            var url="{{ path(pathBase~'_detail',{ id: 'ENTITY_ID' })}}";
            location.href=url.replace('ENTITY_ID',data.id);
        });
        $('#{{ pathBase }}_dataTable').on('click', 'button.btn-download', function () {
            var data = $('#{{ pathBase }}_dataTable').DataTable().row( $(this).parents('tr') ).data();
            var url="{{ path('api_preformatted_items_download_by_group',{ id: 'ENTITY_ID' })}}";
            location.href=url.replace('ENTITY_ID',data.id);
        });
    });
</script>
{% endblock %}